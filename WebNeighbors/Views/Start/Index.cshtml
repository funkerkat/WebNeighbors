    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="page-header">Соседи на карте <small>найди знакомых и отметь себя!</small></h2>
            </div>
            <div class="col-md-6">
                <h2 class="page-header">Ваши данные <small>присоединяйтесь к проекту!</small></h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <!-- Yandex Map -->
                <div id="map" style="width: 100%; height: 400px"></div>
            </div>
            <div class="col-md-6">
                <!-- Input form -->
                <div class="container">
                    <form role="form" method="post" action="">
                        <div class="form-group">
                            <label for="personname">Имя:</label>
                            <input type="text" name="PersonName" class="form-control" id="personname" placeholder="Например, Марья Петровна">
                        </div>
                        <div class="form-group">
                            <label for="coordx">Имя:</label>
                            <input type="text" name="CoordinateX" class="form-control" id="coordx" placeholder="Например, 55,86">
                        </div>
                        <div class="form-group">
                            <label for="coordy">Имя:</label>
                            <input type="text" name="CoordinateY" class="form-control" id="coordy" placeholder="Например, 37,74">
                        </div>
                        <div class="form-group">
                            <label for="service">Услуга:</label>
                            <input type="text" name="ServiceName" class="form-control" id="service" placeholder="Например, пирожки">
                        </div>
                        <div class="form-group">
                            <label for="description">Описание:</label>
                            <textarea class="form-control" name="ServiceDescription" rows="4" id="description" placeholder="Например, пеку вкусные пирожки с грибами, картошкой, луком"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Отправить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="container">
        <h2>Список соседей</h2>
        <p>или чем заполнена база данных:</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Имя</th>
                    <th>Услуга</th>
                    <th>Описание</th>
                    <th>Широта</th>
                    <th>Долгота</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                <tr>
                    <td><p>@person.Id</p></td>
                    <td><p>@person.PersonName</p></td>
                    <td><p>@person.ServiceName</p></td>
                    <td><p>@person.ServiceDescription</p></td>
                    <td><p>@person.CoordinateX</p></td>
                    <td><p>@person.CoordinateY</p></td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
